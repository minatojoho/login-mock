<%= form_tag login_path, method: :post do %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div>
    <%= submit_tag "Login" %>
  </div>
<% end %>
<div>&nbsp;</div>
<div>
  <%= link_to 'Home', root_path %>
</div>
